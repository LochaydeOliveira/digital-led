<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p>        
    </div>
</div>

{% schema %}
    {
        "name": "Template 404",
        "tag": "section",
        "class": "flex items-center justify-center text-center py-7 h-screen",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "default": "404",
                "label": "Título 404"
            
            },
            {
                "type": "text",
                "id": "subtext_title",
                "default": "Página não encontrada.",
                "label": "Texto página 404"
            }
        ]
    }


{% endschema %}